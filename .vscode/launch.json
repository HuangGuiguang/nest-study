    "version": "0.2.0",
    "configurations": [
        // custom-decorator
        {
            "name": "Launch custom-decorator via npm",
            "request": "launch",
            // "runtimeArgs": [
            //     "run",
            //     "start:dev"
            // ],
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/custom-decorator"
        },
        // argument-host
        {
            "name": "Launch argument-host via npm",
            "request": "launch",
            // "runtimeArgs": [
            //     "run",
            //     "start:dev"
            // ],
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/argument-host"
        },
        // all-decorator
        {
            "name": "Launch all-decorator via npm",
            "request": "launch",
            // "runtimeArgs": [
            //     "run",
            //     "start:dev"
            // ],
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/all-decorator"
        },
        // nest-provider
        {
            "name": "Launch nest-provider via npm",
            "request": "launch",
            // "runtimeArgs": [
            //     "run",
            //     "start:dev"
            // ],
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/nest-provider"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug nest",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start:dev",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/nest-ioc"
        },        
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/nest-debug/debug-test.js",
            "request": "launch",
            "stopOnEntry": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}